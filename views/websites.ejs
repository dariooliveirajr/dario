<!DOCTYPE html>
<html lang="pt-br" class="h-100">
	<!-- CONFIGURAÇÕES E IMPORTAÇÕES -->
    <head>
        <title>Dário - Web Developer</title>
        <meta charset="utf-8"/>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">
        <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
        <link href="style/style.css" rel="stylesheet"/>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="shortcut icon" href="img/icon.png" type="image/x-icon" />
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <script src="https://kit.fontawesome.com/f8a557bca4.js"></script>
    </head>
    <body class="h-100 m-0 p-0">
		<!-- LOGO FULLSCREN -->
        <section id="websites" class="bloco bg-dark-blue">
                <div class="row w-100 m-0" id="voltar">
                    <div class="col">
                        <a href="/portfolio">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
                <% for( var i = 0; i< websites.length; i++){%>
                    <div id="websites-desktop" class="row m-0">
                        <div class="col p-5">
                            <div class="row m-0">
                                <div <% if(i%2 == 0){ %>
                                     class="col-sm-4" data-aos="zoom-in-up" data-aos-duration="2000">
                                     <img class="img-left" src="img/<%= websites[i].logo %>"/>
                                     <% } else{ %>
                                     class="col-sm-8 text-right" data-aos="zoom-in-up" data-aos-duration="2000">
                                     <div class="descricao text-p-left">
                                         <a href="<%= websites[i].link%>" target="_blank">
                                            <i class="fas fa-external-link-alt" aria-hidden="false"></i><h1><%= websites[i].titulo %></h1>
                                         </a>
                                         <p><%= websites[i].texto %></p>
                                     </div>
                                     <% } %>
                                    
                                </div>
                                <div <% if(i%2 == 0){ %>
                                     class="col-sm-8 text-left" data-aos="zoom-in-up" data-aos-duration="2000">
                                     <div class="descricao">
                                         <a href="<%= websites[i].link%>" target="_blank">
                                            <i class="fas fa-external-link-alt" aria-hidden="false"></i><h1><%= websites[i].titulo %></h1>
                                         </a>
                                         <p><%= websites[i].texto %></p>
                                     </div>
                                     <% } else{ %>
                                     class="col-sm-4" data-aos="zoom-in-up" data-aos-duration="2000">
                                     <img class="img-right" src="img/<%= websites[i].logo %>"/>
                                     <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="websites-mobile" class="row m-0">
                        <div class="col">
                            <div class="row m-0">
                                <div class="col-md-4" data-aos="zoom-in-up" data-aos-duration="2000">
                                    <img class="img-mobile" src="img/<%= websites[i].logo %>"/>                                 
                                </div>
                                <div class="col-md-8 text-mobile" data-aos="zoom-in-up" data-aos-duration="2000">
                                     <div class="descricao">
                                         <a href="<%= websites[i].link%>" target="_blank">
                                            <i class="fas fa-external-link-alt" aria-hidden="false"></i><h1><%= websites[i].titulo %></h1>
                                         </a>
                                         <p><br/><%= websites[i].texto %></p>
                                     </div>
                                     
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
        </section>
		<!-- RODAPÉ DO SITE -->
