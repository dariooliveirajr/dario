            <!-- BORDA -->
            <table class="w-100 text-center">
                <tr id=borda>
                    <td>
                        <img src="img/borda.png"/>
                    </td>
                </tr>
            </table>
            <!-- REDES2 -->
            <table class="redes2 w-100"  data-aos="zoom-in-up" data-aos-duration="2000">
                <tr>
                    <td class="text-center">
